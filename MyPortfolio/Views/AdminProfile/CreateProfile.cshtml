@model MyPortfolio.Data.Profile
@{
    ViewData["Title"] = "Ana Bilgiler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewData["ActiveMenu"] = "Profile";
}



<div class="content-area">

    <div style="margin-bottom:40px;">
        <h2 style="font-size:26px; font-weight:700; color:#fff;">Ana Bilgiler Oluştur</h2>
        <p style="color:var(--text-muted); font-size:14px; margin-top:8px;">
            Ziyaretçilerin seni ilk gördüğünde okuyacağı başlık ve açıklamayı buradan ilk kez tanımlayabilirsin.
        </p>
    </div>

    <form asp-action="CreateProfile" method="post" class="table-container" style="padding:35px; max-width:700px;">
        @Html.AntiForgeryToken()

        <div style="margin-bottom:30px;">
            <label style="display:block; font-size:12px; font-weight:600; color:var(--text-muted); margin-bottom:8px;">
                Başlık (Title)
            </label>
            <input asp-for="Title" placeholder="Örn: Full Stack Engineer"
                   style="width:100%; padding:14px 16px; border-radius:12px; background-color:#14141a; border:1px solid var(--border-color); color:#fff; font-size:14px;" />
            <span asp-validation-for="Title" style="color:#f87171; font-size:12px;"></span>
        </div>

        <div style="margin-bottom:35px;">
            <label style="display:block; font-size:12px; font-weight:600; color:var(--text-muted); margin-bottom:8px;">
                Açıklama (Description)
            </label>
            <textarea asp-for="Description" rows="6" placeholder="Kendinden kısaca bahset..."
                      style="width:100%; padding:14px 16px; border-radius:12px; background-color:#14141a; border:1px solid var(--border-color); color:#fff; font-size:14px; resize:none;"></textarea>
            <span asp-validation-for="Description" style="color:#f87171; font-size:12px;"></span>
        </div>

        <div style="display:flex; justify-content:flex-end; gap:15px;">
            <a asp-action="Index" class="btn btn-sm btn-edit" style="text-decoration:none;">
                <i class="fa-solid fa-arrow-left"></i> Geri
            </a>
            <button type="submit" class="btn btn-add">
                <i class="fa-solid fa-plus"></i> Oluştur
            </button>
        </div>
    </form>
</div>