@model MyPortfolio.Data.Profile
@{
    ViewData["Title"] = "Ana Bilgiler";
    ViewData["ActiveMenu"] = "Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-area">

    <div style="margin-bottom:40px;">
        <h2 style="font-size:26px; font-weight:700; color:#fff;">Ana Bilgiler</h2>
        <p style="color:var(--text-muted); font-size:14px; margin-top:8px;">
            Ana sayfada ziyaretçilere gösterilecek başlık ve açıklama metinlerini buradan düzenleyebilirsin.
        </p>
    </div>

    @* Başarılı mesaj *@
    @if (TempData["Success"] != null)
    {
        <div style="
                    margin-bottom:20px;
                    padding:14px 16px;
                    border-radius:12px;
                    border:1px solid rgba(34,197,94,0.35);
                    background: rgba(34,197,94,0.08);
                    color: #bbf7d0;
                    max-width:700px;">
            <i class="fa-solid fa-circle-check" style="margin-right:8px;"></i>
            @TempData["Success"]
        </div>
    }

    <form asp-action="UpdateProfile" method="post" class="table-container" style="padding:35px; max-width:700px;">
        @Html.AntiForgeryToken()

        @* --- KRİTİK EKLENTİ: ID BİLGİSİ --- *@
        @* Veritabanında doğru satırı güncelleyebilmek için ID'yi gizli olarak gönderiyoruz *@
        <input type="hidden" asp-for="ProfileId" />

        <div style="margin-bottom:30px;">
            <label style="display:block; font-size:12px; font-weight:600; color:var(--text-muted); margin-bottom:8px;">
                Başlık (Title)
            </label>

            <input asp-for="Title" type="text"
                   placeholder="Örn: Full Stack Developer"
                   style="
                        width:100%;
                        padding:14px 16px;
                        border-radius:12px;
                        background-color:#14141a;
                        border:1px solid var(--border-color);
                        color:#fff;
                        font-size:14px;
                   " />

            <span asp-validation-for="Title" style="display:block; margin-top:8px; font-size:12px; color:#f87171;"></span>
        </div>

        <div style="margin-bottom:35px;">
            <label style="display:block; font-size:12px; font-weight:600; color:var(--text-muted); margin-bottom:8px;">
                Kısa Açıklama (Description)
            </label>

            <textarea asp-for="Description" rows="6"
                      placeholder="Kendinden kısaca bahset..."
                      style="
                        width:100%;
                        padding:14px 16px;
                        border-radius:12px;
                        background-color:#14141a;
                        border:1px solid var(--border-color);
                        color:#fff;
                        font-size:14px;
                        resize:none;
                      "></textarea>

            <span asp-validation-for="Description" style="display:block; margin-top:8px; font-size:12px; color:#f87171;"></span>
        </div>

        <div style="display:flex; justify-content:flex-end; gap:12px;">
            <button type="submit" class="btn btn-add">
                <i class="fa-solid fa-save" style="margin-right:5px;"></i>
                Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}