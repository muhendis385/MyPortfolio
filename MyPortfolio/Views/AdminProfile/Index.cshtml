@using MyPortfolio.Data
@model List<Profile>
@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div id="section-ana-bilgiler" class="page-section">

    <div class="toolbar">
        @if (Model == null || !Model.Any())
        {
            <a href="/AdminProfile/CreateProfile" class="btn btn-add">
                <i class="fa-solid fa-plus"></i> Yeni Bilgi Ekle
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div style="margin-bottom:18px; padding:12px 16px; border-radius:12px;
                        border:1px solid rgba(34,197,94,0.35);
                        background: rgba(34,197,94,0.08);
                        color:#bbf7d0;">
            <i class="fa-solid fa-circle-check" style="margin-right:8px;"></i>
            @TempData["Success"]
        </div>
    }

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th style="width: 80px;">Görsel</th>
                    <th>Ad Soyad</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th style="width: 180px;">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="6" style="text-align:center; padding:40px; color: var(--text-muted);">
                            <i class="fa-regular fa-folder-open" style="font-size:24px; margin-bottom:10px; display:block;"></i>
                            Henüz profil kaydı yok. “Yeni Bilgi Ekle” ile oluşturabilirsin.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            
                         
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/AdminProfile/UpdateProfile/@item.ProfileId"
                                       class="btn btn-sm btn-edit">
                                        <i class="fa-solid fa-pen"></i> Güncelle
                                    </a>

                                    @* Tek kayıt mantığında delete’i gizliyoruz *@
                                    @* <a href="/AdminProfile/DeleteProfile/@item.ProfileId"
                                         class="btn btn-sm btn-delete"
                                         onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?')">
                                        <i class="fa-solid fa-trash"></i> Sil
                                       </a> *@
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
