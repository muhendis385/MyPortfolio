@model MyPortfolio.Data.Contact
@{
    ViewData["Title"] = "İletişim Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-area">

    <div style="margin-bottom:40px;">
        <h2 style="font-size:26px; font-weight:700; color:#fff;">İletişim Bilgileri</h2>
        <p style="color:var(--text-muted); font-size:14px; margin-top:8px;">
            Ziyaretçilerin sana ulaşacağı tüm bağlantıları buradan ekleyebilirsin.
        </p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div style="margin-bottom:18px; padding:12px 16px; border-radius:12px;
                        border:1px solid rgba(34,197,94,0.35);
                        background: rgba(34,197,94,0.08);
                        color:#bbf7d0;">
            <i class="fa-solid fa-circle-check" style="margin-right:8px;"></i>
            @TempData["Success"]
        </div>
    }

    <form method="post" class="table-container" style="padding:35px; max-width:900px;">
        @Html.AntiForgeryToken()

        <div style="margin-bottom:22px;">
            <label style="display:block; font-size:12px; font-weight:600; color:var(--text-muted); margin-bottom:8px;">
                Ad/Soyad
            </label>
            @* type="text" eklemeyi ve z-index veya display kontrolü yapmayı unutma *@
            <input asp-for="Name" type="text"
                   placeholder="Adınızı giriniz..."
                   style="width:100%; padding:14px 16px; border-radius:12px; background-color:#14141a;
                  border:1px solid #333; color:#fff; font-size:14px; display: block !important;" />

            <span style="display:block; margin-top:8px; font-size:12px; color:#f87171;">
                @Html.ValidationMessageFor(x => x.Name)
            </span>
        </div>

        <div style="margin-bottom:22px;">
            <label style="display:block; font-size:12px; font-weight:600; color:var(--text-muted); margin-bottom:8px;">
                Açıklama (Description)
            </label>
            <textarea asp-for="Description" rows="4"
                      style="width:100%; padding:14px 16px; border-radius:12px; background-color:#14141a;
                             border:1px solid var(--border-color); color:#fff; font-size:14px; resize:none;"></textarea>
        </div>

        <div style="margin-bottom:22px;">
            <label style="display:block; font-size:12px; font-weight:600; color:var(--text-muted); margin-bottom:8px;">
                E-posta (EmailAdress)
            </label>
            <input asp-for="Email" placeholder="ornek@mail.com"
                   style="width:100%; padding:14px 16px; border-radius:12px; background-color:#14141a;
                          border:1px solid var(--border-color); color:#fff; font-size:14px;" />
            <span style="display:block; margin-top:8px; font-size:12px; color:#f87171;">
                @Html.ValidationMessageFor(x => x.Email)
            </span>
        </div>

        

        <div style="display:flex; justify-content:flex-end; gap:12px;">
            <button type="submit" class="btn btn-add">
                <i class="fa-solid fa-plus"></i> Kaydet
            </button>
        </div>
    </form>
</div>
