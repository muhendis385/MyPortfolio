@using MyPortfolio.Data
@model List<Skill>
@{
    ViewData["Title"] = "Yetenekler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["ActiveMenu"] = "Skill";

    int count = 0;
}

<div class="page-section">

    <div class="toolbar">
        <a asp-controller="AdminSkill" asp-action="CreateSkill" class="btn btn-add">
            <i class="fa-solid fa-plus"></i> Yeni Yetenek Ekle
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div style="margin-bottom:18px; padding:12px 16px; border-radius:12px;
                        border:1px solid rgba(34,197,94,0.35);
                        background: rgba(34,197,94,0.08);
                        color:#bbf7d0;">
            <i class="fa-solid fa-circle-check" style="margin-right:8px;"></i>
            @TempData["Success"]
        </div>
    }

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th style="width:240px;">Yetenek</th>
                    <th>Seviye</th>
                    <th style="width:180px;">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="4" style="text-align:center; padding:40px; color: var(--text-muted);">
                            <i class="fa-regular fa-folder-open" style="font-size:24px; margin-bottom:10px; display:block;"></i>
                            Henüz yetenek eklenmemiş.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><strong style="color:#fff;">@item.Name</strong></td>
                            <td>
                                <div class="progress-wrapper">
                                    <div class="progress-container">
                                        <div class="progress-bar" style="width:@(item.Level)%;"></div>
                                    </div>
                                    <span class="progress-text">@item.Level%</span>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-controller="AdminSkill" asp-action="UpdateSkill" asp-route-id="@item.SkillId"
                                       class="btn btn-sm btn-edit">
                                        <i class="fa-solid fa-pen"></i> Güncelle
                                    </a>

                                    <a asp-controller="AdminSkill" asp-action="DeleteSkill" asp-route-id="@item.SkillId"
                                       class="btn btn-sm btn-delete"
                                       onclick="return confirm('Bu yeteneği silmek istediğinize emin misiniz?')">
                                        <i class="fa-solid fa-trash"></i> Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
