@using MyPortfolio.Data
@model Contact

<section class="pb-20 scroll-mt-20" id="contact">
    <div class="glass-panel rounded-[3rem] p-12 relative overflow-hidden">
        @* Dekoratif Arka Plan *@
        <div class="absolute top-0 right-0 w-64 h-64 bg-secondary/10 rounded-full blur-3xl"></div>

        <div class="relative z-10">
            <h2 class="text-5xl font-black text-white mb-12">Hadi Tanışalım.</h2>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">

                @* SOL TARAF: SENİN BİLGİLERİN *@
                <div class="space-y-6">
                    <div class="p-6 rounded-[2rem] bg-surface-dark border border-white/5 hover:border-secondary/30 transition-colors">
                        @* Senin İsmin *@
                        
                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-10 h-10 rounded-xl bg-secondary/20 flex items-center justify-center text-secondary border border-secondary/20">
                                <i class="fa-solid fa-at"></i>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 font-bold uppercase tracking-tighter">Ad/Soyad</p>
                                <h4 class="text-white font-medium">@ViewBag.MyContactInfo?.Name</h4>
                            </div>
                        </div>

                        @* Senin Email *@
                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-10 h-10 rounded-xl bg-secondary/20 flex items-center justify-center text-secondary border border-secondary/20">
                                <i class="fa-solid fa-at"></i>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 font-bold uppercase tracking-tighter">E-posta</p>
                                <h4 class="text-white font-medium">@ViewBag.MyContactInfo?.Email</h4>
                            </div>
                        </div>

                        @* Senin Kısa Açıklaman *@
                        <div class="flex flex-col gap-2 p-4 rounded-2xl bg-white/5">
                            <p class="text-xs text-secondary font-bold uppercase">Hakkımda</p>
                            <p class="text-gray-300 text-sm leading-relaxed">
                                @ViewBag.MyContactInfo?.Description
                            </p>
                        </div>
                    </div>
                </div>

                @* SAĞ TARAF: MÜŞTERİ FORMU *@
                <div class="lg:col-span-2">
                    <form asp-action="SendMessage" asp-controller="Home" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input asp-for="Name"
                               class="bg-surface-dark border-white/10 text-white rounded-2xl p-4 focus:ring-secondary focus:border-secondary outline-none transition-all placeholder:text-gray-600"
                               placeholder="Sizin Adınız" type="text" required />

                        <input asp-for="Email"
                               class="bg-surface-dark border-white/10 text-white rounded-2xl p-4 focus:ring-secondary focus:border-secondary outline-none transition-all placeholder:text-gray-600"
                               placeholder="Sizin E-postanız" type="email" required />

                        <textarea asp-for="Description"
                                  class="md:col-span-2 bg-surface-dark border-white/10 text-white rounded-2xl p-4 focus:ring-secondary focus:border-secondary outline-none transition-all placeholder:text-gray-600"
                                  placeholder="Mesajınızı buraya yazın..." rows="4" required> </textarea>

                        <button type="submit"
                                class="md:col-span-2 py-4 rounded-2xl bg-main-gradient text-white font-bold text-lg shadow-xl shadow-secondary/20 hover:shadow-secondary/40 hover:-translate-y-1 transition-all duration-300">
                            Mesaj Gönder
                            <i class="fa-solid fa-paper-plane ml-2"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>