<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #6a11cb 0%, #b224ef 50%, #ff7e5f 100%);
            --secondary-gradient: linear-gradient(90deg, #ff7e5f 0%, #feb47b 100%);
            --sidebar-bg: rgba(20, 20, 25, 0.95);
            --main-bg: #0f0f12;
            --card-bg: #1a1a20;
            --text-color: #e0e0e0;
            --text-muted: #8a8a9b;
            --border-color: #2a2a35;
            --hover-bg: rgba(106, 17, 203, 0.1);
            --accent-purple: #b224ef;
            --accent-orange: #ff7e5f;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Outfit', sans-serif;
            text-decoration: none;
            list-style: none;
        }

        body {
            background-color: var(--main-bg);
            background-image: radial-gradient(circle at top right, rgba(178, 36, 239, 0.1), transparent 40%);
            color: var(--text-color);
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .sidebar {
            width: 280px;
            background-color: var(--sidebar-bg);
            backdrop-filter: blur(10px);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding: 25px;
            display: flex;
            flex-direction: column;
            border-right: 1px solid var(--border-color);
            z-index: 100;
            box-shadow: 5px 0 30px rgba(0,0,0,0.3);
        }

        .logo-area {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 50px;
            padding-bottom: 20px;
            border-bottom: 1px solid var(--border-color);
        }

        .logo-icon {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            color: white;
            box-shadow: 0 0 15px rgba(178, 36, 239, 0.4);
        }

        .logo-text h2 {
            font-size: 20px;
            font-weight: 700;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .logo-text span {
            font-size: 11px;
            color: var(--text-muted);
            letter-spacing: 2px;
            font-weight: 500;
        }

        .menu-title {
            color: var(--text-muted);
            font-size: 11px;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            padding-left: 12px;
            font-weight: 600;
        }

        .sidebar-menu ul li {
            margin-bottom: 5px;
        }

            .sidebar-menu ul li a {
                display: flex;
                align-items: center;
                padding: 14px 15px;
                color: var(--text-muted);
                border-radius: 12px;
                transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
                font-size: 14px;
                font-weight: 500;
                position: relative;
                overflow: hidden;
            }

                .sidebar-menu ul li a i {
                    width: 25px;
                    margin-right: 12px;
                    font-size: 18px;
                    transition: all 0.3s ease;
                }

                .sidebar-menu ul li a:hover {
                    background-color: var(--hover-bg);
                    color: #fff;
                    padding-left: 20px;
                }

                    .sidebar-menu ul li a:hover i {
                        color: var(--accent-orange);
                        transform: scale(1.1);
                    }

                .sidebar-menu ul li.active a {
                    background: var(--primary-gradient);
                    color: #fff;
                    box-shadow: 0 5px 20px rgba(178, 36, 239, 0.4);
                    padding-left: 20px; /* Aktif olduğunu belli etmek için biraz sağa kaysın */
                }

                    .sidebar-menu ul li a.active i {
                        color: #fff;
                        transform: scale(1.1);
                    }

        .user-profile {
            margin-top: auto;
            display: flex;
            align-items: center;
            padding: 15px;
            background: rgba(255,255,255,0.03);
            border-radius: 16px;
            border: 1px solid var(--border-color);
        }

        .user-img {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: #2a2a35;
            margin-right: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--accent-purple);
            overflow: hidden;
        }

        .user-info h4 {
            font-size: 15px;
            color: #fff;
            font-weight: 600;
        }

        .user-info p {
            font-size: 12px;
            color: var(--accent-orange);
        }

        .logout-btn {
            margin-left: auto;
            color: var(--text-muted);
            cursor: pointer;
            transition: 0.3s;
            background: rgba(255,255,255,0.05);
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }

            .logout-btn:hover {
                color: #fff;
                background: #ef4444;
            }

        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 40px;
            display: flex;
            flex-direction: column;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 50px;
        }

        .page-title h1 {
            font-size: 28px;
            font-weight: 700;
            background: linear-gradient(to right, #fff, #aaa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-title p {
            color: var(--text-muted);
            font-size: 14px;
            margin-top: 8px;
        }

        .date-badge {
            background: rgba(178, 36, 239, 0.1);
            padding: 12px 24px;
            border-radius: 50px;
            border: 1px solid rgba(178, 36, 239, 0.3);
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: var(--accent-purple);
            font-weight: 500;
        }

        .content-area {
            display: block;
            background: transparent;
            border: none;
        }

        .toolbar {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 25px;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 12px;
            border: none;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            color: white;
            letter-spacing: 0.5px;
        }

        .btn-add {
            background: var(--primary-gradient);
            box-shadow: 0 4px 15px rgba(178, 36, 239, 0.4);
        }

            .btn-add:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(178, 36, 239, 0.6);
            }

        .table-container {
            background: var(--card-bg);
            border-radius: 20px;
            border: 1px solid var(--border-color);
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        th, td {
            padding: 20px 25px;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
            color: var(--text-muted);
            font-size: 14px;
            vertical-align: middle;
        }

        th {
            background-color: rgba(20, 20, 25, 0.5);
            font-weight: 600;
            color: #fff;
            text-transform: uppercase;
            font-size: 11px;
            letter-spacing: 1.5px;
        }

        tr:last-child td {
            border-bottom: none;
        }

        tr {
            transition: background-color 0.2s;
        }

            tr:hover td {
                background-color: rgba(255, 255, 255, 0.03);
                color: #fff;
            }

        .table-img {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            object-fit: cover;
            border: 2px solid var(--border-color);
        }

        .action-buttons {
            display: flex;
            gap: 12px;
        }

        .btn-sm {
            padding: 8px 14px;
            font-size: 12px;
            border-radius: 8px;
        }

        .btn-edit {
            background-color: rgba(178, 36, 239, 0.15);
            color: var(--accent-purple);
            border: 1px solid rgba(178, 36, 239, 0.3);
        }

            .btn-edit:hover {
                background-color: var(--accent-purple);
                color: white;
            }

        .btn-delete {
            background-color: rgba(239, 68, 68, 0.15);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }

            .btn-delete:hover {
                background-color: #ef4444;
                color: white;
            }

        table a {
            color: var(--accent-orange) !important;
            font-weight: 500;
            text-decoration: none;
            transition: 0.3s;
        }

            table a:hover {
                color: #fff !important;
                text-shadow: 0 0 10px var(--accent-orange);
            }

        .progress-wrapper {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .progress-container {
            flex: 1;
            background-color: rgba(255,255,255,0.05);
            border-radius: 10px;
            overflow: hidden;
            height: 8px;
        }

        .progress-bar {
            height: 100%;
            background: var(--primary-gradient);
            border-radius: 10px;
            width: 0%;
            transition: width 1s ease-in-out;
            box-shadow: 0 0 10px rgba(178, 36, 239, 0.5);
        }

        .progress-text {
            font-size: 12px;
            font-weight: 700;
            color: #fff;
            width: 40px;
            text-align: right;
        }
    </style>

    @RenderSection("Styles", false)
</head>

<body>

    <aside class="sidebar">
        <div class="logo-area">
            <div class="logo-icon">
                <i class="fa-solid fa-bolt"></i>
            </div>
            <div class="logo-text">
                <h2>AdminPanel</h2>
                <span>YÖNETİM SİSTEMİ</span>
            </div>
        </div>

        <div class="menu-title">Yönetim</div>

        <nav class="sidebar-menu">
            <ul>
                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "Dashboard" ? "active" : "")">
                    <a asp-controller="AdminDashboard" asp-action="Index">
                        <i class="fa-solid fa-table-columns"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "Profile" ? "active" : "")">
                    <a asp-controller="AdminProfile" asp-action="Index">
                        <i class="fa-solid fa-chart-pie"></i>
                        <span>Ana Bilgiler</span>
                    </a>
                    
                </li>


                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "About" ? "active" : "")">
                    <a asp-controller="AdminAbout" asp-action="Index">
                        <i class="fa-regular fa-id-card"></i>
                        <span>Hakkımda</span>
                    </a>
                </li>

                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "Experience" ? "active" : "")">
                    <a asp-controller="AdminExperience" asp-action="Index">
                        <i class="fa-solid fa-briefcase"></i>
                        <span>Deneyimler</span>
                    </a>
                </li>

                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "Education" ? "active" : "")">
                    <a asp-controller="AdminEducation" asp-action="Index">
                        <i class="fa-solid fa-graduation-cap"></i>
                        <span>Eğitim</span>
                    </a>
                </li>

                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "Skill" ? "active" : "")">
                    <a asp-controller="AdminSkill" asp-action="Index">
                        <i class="fa-solid fa-code"></i>
                        <span>Yetenekler</span>
                    </a>
                </li>

                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "Certificate" ? "active" : "")">
                    <a asp-controller="AdminCertificate" asp-action="Index">
                        <i class="fa-solid fa-certificate"></i>
                        <span>Sertifikalar</span>
                    </a>
                </li>

                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "Project" ? "active" : "")">
                    <a asp-controller="AdminProject" asp-action="Index">
                        <i class="fa-solid fa-rocket"></i>
                        <span>Projeler</span>
                    </a>
                </li>

                <li class="nav-item @(ViewData["ActiveMenu"]?.ToString() == "Contact" ? "active" : "")">
                    <a asp-controller="AdminContact" asp-action="Index">
                        <i class="fa-regular fa-envelope"></i>
                        <span>İletişim</span>
                    </a>
                </li>

            </ul>
        </nav>

        <div class="user-profile">
            <div class="user-img">
                <i class="fa-solid fa-user" style="color: #fff;"></i>
            </div>
            <div class="user-info">
                <h4>Admin</h4>
                <p>Full Access</p>
            </div>
            <div class="logout-btn">
                <i class="fa-solid fa-power-off"></i>
            </div>
        </div>
    </aside>

    <main class="main-content">
        <div class="header">
            <div class="page-title">
                <h1>@ViewData["Title"]</h1>
                <p>Sistem üzerindeki güncel veriler ve yönetim paneli.</p>
            </div>
            <div class="date-badge">
                <i class="fa-regular fa-calendar-check"></i>
                <span>@DateTime.Now.ToString("dd MMMM yyyy")</span>
            </div>
        </div>

        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>

    @RenderSection("Scripts", false)

</body>
</html>

