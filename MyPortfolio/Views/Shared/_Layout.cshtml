<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - Ahmet Semiz</title>

    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#ff791a",
                        "secondary": "#b224ef",
                        "background-dark": "#0f0f12",
                        "surface-dark": "#1a1a20",
                    },
                    fontFamily: { "display": ["Outfit", "sans-serif"] },
                    backgroundImage: {
                        'main-gradient': 'linear-gradient(135deg, #6a11cb 0%, #b224ef 50%, #ff791a 100%)',
                    }
                },
            },
        }
    </script>

    <style>
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #0f0f12;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(180deg, #b224ef 0%, #ff791a 100%);
            border-radius: 20px;
            border: 2px solid #0f0f12;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #ff791a;
            }

        .glass-panel {
            background: rgba(26, 26, 32, 0.8);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .nav-item.active {
            background: rgba(178, 36, 239, 0.1);
            border-left: 4px solid #b224ef;
        }

            .nav-item.active .nav-text {
                color: #fff;
                font-weight: 700;
            }

            .nav-item.active .nav-icon {
                color: #b224ef;
                font-variation-settings: 'FILL' 1;
            }

        html {
            scroll-behavior: smooth;
        }

        .glow-text {
            text-shadow: 0 0 20px rgba(178, 36, 239, 0.3);
        }
    </style>

    @RenderSection("Styles", false)
</head>
<body class="bg-background-dark text-slate-100 font-display overflow-x-hidden">

    <div class="flex h-screen w-full overflow-hidden">
        <aside class="hidden md:flex flex-col w-80 h-full fixed left-0 top-0 z-50 glass-panel border-r border-white/5">
            <div class="p-8 pb-4">
                <div class="flex items-center gap-4 mb-10">
                    <div class="rounded-xl h-14 w-14 bg-main-gradient flex items-center justify-center shadow-[0_0_20px_rgba(178,36,239,0.4)]">
                        <span class="material-symbols-outlined text-white text-3xl">bolt</span>
                    </div>
                    <div class="flex flex-col">
                        <h1 class="text-white text-xl font-bold tracking-tight">Ahmet Semiz</h1>
                        <p class="text-secondary text-xs font-bold tracking-widest uppercase">Full Stack Engineer</p>
                    </div>
                </div>
            </div>

            <nav class="flex-1 overflow-y-auto px-4 space-y-1">
                <a class="nav-item flex items-center gap-4 px-4 py-3 rounded-xl transition-all hover:bg-white/5 group" href="#hero">
                    <span class="material-symbols-outlined nav-icon text-gray-500 group-hover:text-secondary">home</span>
                    <span class="nav-text text-gray-400 text-sm group-hover:text-white">Ana Bilgiler</span>
                </a>
                <a class="nav-item flex items-center gap-4 px-4 py-3 rounded-xl transition-all hover:bg-white/5 group" href="#about">
                    <span class="material-symbols-outlined nav-icon text-gray-500 group-hover:text-secondary">person</span>
                    <span class="nav-text text-gray-400 text-sm group-hover:text-white">Hakkımda</span>
                </a>
                <a class="nav-item flex items-center gap-4 px-4 py-3 rounded-xl transition-all hover:bg-white/5 group" href="#experience">
                    <span class="material-symbols-outlined nav-icon text-gray-500 group-hover:text-secondary">history_edu</span>
                    <span class="nav-text text-gray-400 text-sm group-hover:text-white">Deneyimler</span>
                </a>
                <a class="nav-item flex items-center gap-4 px-4 py-3 rounded-xl transition-all hover:bg-white/5 group" href="#education">
                    <span class="material-symbols-outlined nav-icon text-gray-500 group-hover:text-secondary">school</span>
                    <span class="nav-text text-gray-400 text-sm group-hover:text-white">Eğitim</span>
                </a>
                <a class="nav-item flex items-center gap-4 px-4 py-3 rounded-xl transition-all hover:bg-white/5 group" href="#skills">
                    <span class="material-symbols-outlined nav-icon text-gray-500 group-hover:text-secondary">code</span>
                    <span class="nav-text text-gray-400 text-sm group-hover:text-white">Yetenekler</span>
                </a>
                <a class="nav-item flex items-center gap-4 px-4 py-3 rounded-xl transition-all hover:bg-white/5 group" href="#certs">
                    <span class="material-symbols-outlined nav-icon text-gray-500 group-hover:text-secondary">workspace_premium</span>
                    <span class="nav-text text-gray-400 text-sm group-hover:text-white">Sertifikalar</span>
                </a>
                <a class="nav-item flex items-center gap-4 px-4 py-3 rounded-xl transition-all hover:bg-white/5 group" href="#projects">
                    <span class="material-symbols-outlined nav-icon text-gray-500 group-hover:text-secondary">rocket_launch</span>
                    <span class="nav-text text-gray-400 text-sm group-hover:text-white">Projeler</span>
                </a>
                <a class="nav-item flex items-center gap-4 px-4 py-3 rounded-xl transition-all hover:bg-white/5 group" href="#contact">
                    <span class="material-symbols-outlined nav-icon text-gray-500 group-hover:text-secondary">alternate_email</span>
                    <span class="nav-text text-gray-400 text-sm group-hover:text-white">İletişim</span>
                </a>
            </nav>

            
        </aside>

        <main class="flex-1 ml-0 md:ml-80 h-full overflow-y-auto">
            <div class="max-w-5xl mx-auto px-6 py-16 md:px-12 flex flex-col gap-40">
                @RenderBody()
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sections = document.querySelectorAll('section');
            const navItems = document.querySelectorAll('.nav-item');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navItems.forEach(item => {
                            item.classList.remove('active');
                            if (item.getAttribute('href').substring(1) === entry.target.id) {
                                item.classList.add('active');
                            }
                        });
                    }
                });
            }, { threshold: 0.5 });

            sections.forEach(section => observer.observe(section));
        });
    </script>

    @RenderSection("Scripts", false)

</body>
</html>
